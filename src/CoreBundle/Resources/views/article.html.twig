
{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "CoreBundle::layout.html.twig" %}

{% block title %}
 {{ article.name }} - Article - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 pub pub-bandeau">
                <a href="#"><h1>pubs</h1></a>
            </div>
            <div class="col-md-8 col-sm-8 col-xs-8 content article">
                <img src="{{ article.image.url }}" alt="{{ article.image.url }}"/>
                <h2>{{ article.name }}</h2>
                
                <i>Par {{ article.author }}, le {{ article.date|date('d/m/Y') }}</i>

  <div class="well">
    <p>{{ article.content | raw }}</p>
  </div>
  <div class="rating">
   <a href="#5" title="Donner 5 étoiles">★</a>
   <a href="#4" title="Donner 4 étoiles">☆</a>
   <a href="#3" title="Donner 3 étoiles">★</a>
   <a href="#2" title="Donner 2 étoiles">☆</a>
   <a href="#1" title="Donner 1 étoile">★</a>
</div>

  {% if not article.categories.empty %}
      <p>
        Cette article est parue dans les catégories suivantes :
        {% for category in article.categories %}
          {{ category.name }}{% if not loop.last %}, {% endif %}
        {% endfor %}
      </p>
    {% endif %}
            </div>
            <div class="col-md-3 col-sm-3 col-xs-3 pull-right pub article">
                <a href="#"><h1>pubs</h1></a>
            </div>
        </div>
{% endblock %}