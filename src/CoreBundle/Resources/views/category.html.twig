

{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "CoreBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block body %}

  <h2>{{ category.name }}</h2>
  <h2>Liste des article</h2>

  <ul>
    {% for article in articles %}
      <li>
        <a href="{{ path('core_article', {'id': article.id}) }}">
          {{ article.name }}
        </a>
        par {{ article.author }},
        le {{ article.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) d'annonces</li>
    {% endfor %}
  </ul>

{% endblock %}